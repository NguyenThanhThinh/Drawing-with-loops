
@{
    ViewBag.Title = "Index";
}

<h2>Rating</h2>
<div class="row">
    <div class="col-md-5">
        @using (Html.BeginForm("DrawRating", "Draw", FormMethod.Post))
        {
            @Html.TextBox("rating", "ViewBag.Rating", new { @type = "number", min = "0", max = "100", @class = "form-control" })<br />
            <input type="submit" class="btn btn-primary" value="Draw" />
        }
    </div>
    <div class="col-md-7">
        @Html.Raw(ViewBag.Stars)
    </div>
</div>

